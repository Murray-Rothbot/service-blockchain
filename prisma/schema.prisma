generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AlertFee {
  id         String   @id @default(uuid())
  webhookUrl String
  fee        Float
  active     Boolean
  createdAt  DateTime @default(now())

  @@map("alert_fees")
}

model AlertTx {
  id            String   @id @default(uuid())
  webhookUrl    String
  txid          String   @db.VarChar(64)
  confirmations Int
  active        Boolean
  createdAt     DateTime @default(now())

  @@map("alert_txs")
}
